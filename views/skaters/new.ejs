<!DOCTYPE html>
<html lang="en" dir="ltr">
  <!-- adding head from partials -->
  <% include ../partials/head.ejs %>
  <body>
    <!-- adding publicnav partials -->
    <% include ../partials/publicnav.ejs %>
    <section class="section">
      <div class="container">
        <h1 class="title">new skater sign up</h1>

        <form action="/skaters" method="post">

          <div class="field">
            <div class="control">
              <div class="select">
                <select name="teamId">
                    <% for(let i = 0; i < teams.length; i++) { %>
                        <option value="<%=teams[i].id%>"><%=teams[i].name%></option>
                    <% } %>
                </select><br/>
              </div>
            </div>
          </div>


          <div class="field">
            <div class="control">
              <input class="input is-medium is-hovered" type="text" name="name" placeholder="skater name">
            </div>
          </div>

          <div class="field">
            <label class="checkbox is-medium">
              <input type="checkbox" name="isVeteran">
              this is not my first gig
            </label>
          </div>


          <div class="field">
            <div class="control">
              <input class="button"type="submit" value="submit">
            </div>
          </div>

        </form>
      </div>
    </section>


  </body>
</html>
